#!/bin/sh

MODE="prod"
optstring=":m:"

while getopts ${optstring} arg; do
  case ${arg} in
    m)
      # check for valid mode after -m
      if [ "$OPTARG" = "dev" ] || [ "$OPTARG" = "prod" ]; then
        MODE=$OPTARG
      else
        echo "ERR: Invalid mode: $OPTARG"
        exit 1
      fi
      ;;
    :)
      echo "ERR: Must supply an argument to -$OPTARG."
      exit 1
      ;;
    ?)
      echo "ERR: Invalid option: -${OPTARG}."
      exit 2
      ;;
  esac
done

printf "Starting in $MODE mode...\r"

# Check if CWD path 'bin' directory, if so, change to parent directory
if [ "${PWD##*/}" = "bin" ]; then
  cd ..
fi

sleep 1

printf "Installing Hex & rebar3...\r"
mix local.hex --if-missing --force > /dev/null 2>&1
mix local.rebar --force > /dev/null 2>&1

# Install deps / install, hide output
printf "Building dependencies...\r"
mix deps.get > /dev/null 2>&1

# If dev mode
if [ "$MODE" = "dev" ]; then
  # Start server w/ mix
  printf "\r"
  # Get 'LFM_API_KEY' from .env file
  source ./.env
  export LFM_API_KEY

  # MIX_ENV=$MODE mix run --no-halt
  MIX_ENV=$MODE LFM_API_KEY=$LFM_API_KEY mix run --no-halt
else
  # Build release
  printf "Building release...\r"
  # TODO
fi
